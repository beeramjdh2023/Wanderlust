<% layout("layouts/boilerplate.ejs") %>

 <style>
  .filters{
    margin-top: 2vh;
    display: flex;
  }
  .filter{
    margin-left: 4vh;
    text-align: center;
    opacity: 0.7;
  }
  .filter p{
    font-size: 0.8rem;
  }
  .filter:hover{
    opacity: 1;
    cursor: pointer;
  }
  .filter a{
    color: inherit;
    text-decoration: none;
  }
  .hamburger{
    display: none;
  }
  
  .taxbox{
    border: solid rgb(186, 185, 185) 1px;
    border-radius: 20px;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 3rem;
    padding: 1rem;
    margin-left: auto;
  }

  .taxinfo{
    display: none;
  }

  @media(max-width:991px){
    
    .hamburger{
      display: flex;
      justify-content: flex-end;
    }

    .filters{
      display: none;
    }
    
    .show{
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
    }
  }
 </style>
  <!-- <h2>All Listings</h2> -->
 <div class="hamburger" id="hamburger">
  <button>&#9776;</button>
 </div>
  <div class="filters" id="filters">
     <div class="filter">
          <div><i class="fa-solid fa-fire"></i></div>
          <p>Trendings</p>
     </div>
     <div class="filter">
      <a href="/listings/category/Rooms">
           <div><i class="fa-solid fa-bed"></i></div>
          <p>Rooms</p>
      </a>    
     </div>

     <div class="filter">
     <a href="/listings/category/Iconic Cities">
          <div><i class="fa-solid fa-mountain-city"></i></div>
          <p>Iconic Cities</p>
     </a>
     </div>
     
     <div class="filter">
     <a href="/listings/category/Mountains">
          <div><i class="fa-solid fa-mountain-sun"></i></div>
          <p>Mountains</p>
     </a>
     </div>
     
     <div class="filter">
     <a href="/listings/category/Castles">
          <div><i class="fa-solid fa-school-flag"></i></div>
          <p>Castles</p>
        
     </a>
     </div>
      
     <div class="filter">
     <a href="/listings/category/Amazing Pools">
          <div><i class="fa-solid fa-person-swimming"></i></div>
          <p>Amazing Pools</p>
      
     </a>
     </div>

     <div class="filter">
     <a href="listings/category/Camping">
          <div><i class="fa-solid fa-campground"></i></div>
          <p>Camping</p>
      
     </a>
     </div>

     <div class="filter">
     <a href="/listings/category/Farms">
          <div><i class="fa-solid fa-cow"></i></div>
          <p>Farms</p>
     </a>
     </div>
     
     <div class="filter">
     <a href="/listings/category/Arctic">
          <div><i class="fa-solid fa-snowflake"></i></div>
          <p>Arctic</p>
     </a>
     </div>
     
     <div class="taxbox">
      <div class="form-check-reverse form-switch" id="taxswitch">
      <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
      <label class="form-check-label" for="switchCheckDefault">Display Total After Taxes</label>
      </div>
     </div>
     

  </div> 
  <br>
  <div class="row row-cols-sm-1 row-cols-md-2 row-cols-lg-3">
    <% for(Listing of alllistings){%>
      <a href="/listings/<%=Listing._id %>" class="listing-link">
      <div class="listing-card card col" >
        <img src="<%= Listing.image.url %>" class="card-img-top" alt="Place Img" style="height: 20rem;">
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b>
              <%=Listing.title%>
            </b><br>
            &#8377;<%=Listing.price.toLocaleString("en-IN") %>/night
            &nbsp; <i class="taxinfo">+18% GST</i> 
          </p>
        </div>
      </div>
      </a>
      <% } %>

  </div>



<script>
  let menu=document.getElementById("hamburger");
     let filters=document.getElementById("filters");
  menu.addEventListener("click",()=>{
 
    filters.classList.toggle("show");
    console.log("clicked");
  })

  let taxswitch=document.getElementById("switchCheckDefault");
  taxswitch.addEventListener("click",()=>{
      console.log("clicked");
      let tax_info=document.getElementsByClassName("taxinfo");
      console.log(tax_info);
      for(tax of tax_info){
                console.log("curr style is"+tax.style.display);
      if(tax.style.display!="inline"){
      tax.style.display="inline";
      }else{
      tax.style.display="none";
      }
  }
  })


  
  
</script>










